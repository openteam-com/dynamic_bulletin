          = link_to 'Добавить объявление', new_my_advert_path

        %li.dropdown
          = link_to "#{current_user}<span class='caret'></span>".html_safe, '#', class: 'dropdown-toggle', 'aria-expanded' => 'false', 'aria-haspopup' => 'true', 'data-toggle' => 'dropdown', :role => 'button'
          %ul.dropdown-menu
            %li
              = link_to 'Мои объявления', my_root_path

            - if can?(:manage, :metadata)
              %li
                = link_to 'Управление метаданными', metadata_root_path

= render partial: 'parent', collection: [@category.ancestors], as: :parents

.row
  .col-xs-9
    %h4='Категория'
    %p= @category

  .col-xs-3
    %p= "#{link_to 'Редактировать', edit_metadata_category_path(@category)} | #{link_to 'Удалить', metadata_category_path(@category), method: :delete, data: { confirm: 'Вы уверены?' }} | #{link_to 'Вернуться', metadata_categories_path}".html_safe

.row
  .col-xs-6
    %h4='Аттрибуты'
    %ul.js-sortable-wrapper{data: { path: update_property_position_metadata_categories_path  }}
      - @category.properties.each do |property|
        %li.js-sortable-item{data: { id: property.id  }}= "#{link_to property, metadata_category_property_path(@category, property)} | #{link_to 'Редактировать', edit_metadata_category_property_path(@category, property)} | #{link_to 'Удалить аттрибут', metadata_category_property_path(@category, property), method: :delete, data: { confirm: 'Вы уверены?' }} (#{property.kind_text}) <span class='glyphicon glyphicon-resize-vertical js-handle-sortable sortable' aria-hidden='true'></span>".html_safe

    %h4='Вложенные категории'
    =link_to 'Добавить вложенную категорию', new_metadata_category_category_path(@category, parent_id: params[:id])

    - if @category.children
      %ul
      - @category.children.each do |child|
        %li= link_to child, metadata_category_category_path(@category, child)

  .col-xs-6
    %h4='Добавление нового аттрибута'
    = simple_form_for :property, url: new_metadata_category_property_path(@category), method: :get do |f|
      = f.input :kind, as: :select, collection: Property.kind.options, include_blank: true, selected: nil, input_html: { class: 'js-properties-types' }

      = f.submit 'Добавить', class: 'btn btn-success'

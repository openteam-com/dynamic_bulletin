= f.simple_fields_for :list_items do |item_form|
  = item_form.input :parent_id, input_html: { value: params[:parent_id] }, as: :hidden if params[:parent_id]

  = item_form.input :title, input_html: { disabled: @category.is_root? ? false : true }
  = item_form.link_to_remove 'Удалить' if @category.is_root?

= f.link_to_add 'Добавить', :list_items if @category.is_root?

= simple_form_for [:my, @advert] do |f|
  = f.input :category_id, as: :hidden
  = f.simple_fields_for :values do |value_form|
    = value_form.input :type, as: :hidden
    = render partial: "common/values_fields/#{value_form.object.class.name.underscore}", locals: {:f => value_form}
  = f.input :description
  = f.submit
